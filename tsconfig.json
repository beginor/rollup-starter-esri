{
  "compilerOptions": {
    "allowJs": true,
    "checkJs": true,
    "sourceMap": true,
    "declaration": false,
    "moduleResolution": "node",
    "target": "ESNext",
    "module": "ESNext",
    "lib": ["DOM", "ESNext"],
    "rootDir": "./",
    "outDir": "dist",
    "noEmit": true
  },
  "include": [
    "src/**/*.js"
  ],
  "exclude": [
    "node_modules",
    "build"
  ]
}
